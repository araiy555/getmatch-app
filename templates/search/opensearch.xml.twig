<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/"
                       xmlns:moz="http://www.mozilla.org/2006/browser/search/">
  <ShortName>{{ site_name()[0:16] }}</ShortName>
  <Description>{{ site_name() }}</Description>
  <InputEncoding>UTF-8</InputEncoding>
  <Image width="16" height="16" type="image/x-icon">
    {{- absolute_url(asset('favicon.ico')) -}}
  </Image>
  <Url type="text/html" method="get" template="{{ url('search') }}">
    <Param name="q" value="{searchTerms}"/>
  </Url>
  <Url type="application/opensearchdescription+xml"
    rel="self"
    template="{{ url('opensearch_description') }}" />
  <moz:SearchForm>{{ url('search') }}</moz:SearchForm>
</OpenSearchDescription>
