{% with { attr: app.request.attributes, get: app.request.query.all } %}
  {% if pager.hasPreviousPage %}
    <link rel="prev" href="{{ path(
      attr.get('_route'),
      (attr.get('_route_params') ?? {})|merge(get)|merge({page: pager.previousPage})
    ) }}">
  {% endif %}

  {% if pager.hasNextPage %}
    <link rel="next" href="{{ pager.nextPageUrl ?? path(
      attr.get('_route'),
      (attr.get('_route_params') ?? {})|merge(get)|merge({ page: pager.nextPage })
    ) }}">
  {% endif %}
{% endwith %}
